= simple_form_for @category, html: {class: "form-horizontal", multipart: true} do |f|
  = render "shared/error_messages", object: f.object
  = image_tag @category.image.thumb.url if @category.image.present?
  = f.input :name, input_html: {class: "form-control"}, label: "Name of Category", error: "Name has been filled", hint: "No special character"
  = f.input :image, as: :file, input_html: {class: "form-control"}
  = f.input :image_cache, as: :hidden
  = f.input :remove_image, as: :check_boxes, label: "Remove Previous Image" if @category.image.present?
  = f.button :submit, class: 'btn btn-default'
